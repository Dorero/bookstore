%main.container
  = link_to(books_path(category: params[:category], sort: params[:sort]), class: "general-back-link") do
    %i.fas.fa-long-arrow-alt-left.mr-15
    = I18n.t(:back_to_results)
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
        .images.clearfix
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
    .col-sm-6
      %h1.mt-res-0= @book.name
      = render('layouts/partials/authors_name', authors: @book.authors)
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10= number_to_currency(@book.price, locale: :fr)
        .col-xs-5.col-md-3
          .input-group.general-position
            = link_to(book_path(@book.id), class: 'input-link') do
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{type: "text"}
            = link_to(book_path(@book.id), class: 'input-link') do
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position= I18n.t(:add_to_cart)
      .general-info-wrap.divider-lg
        %p= I18n.t(:description)
        %p.lead.small.line-height-2
          - if @book.description.length > 250
            = "#{@book.description[0...250]}..."
            %a.in-gold-500.ml-10{href: "#"}= I18n.t(:read_more)
            %input{:type=>"hidden", class: 'hidden-description', value: @book.description}
          - else
            = @book.description
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= I18n.t(:year_publication)
          %p.lead.small.pull-right= @book.year
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= I18n.t(:dimensions)
          %p.lead.small.pull-right= @book.dimensions
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= I18n.t(:materials)
          %p.lead.small.pull-right= @book.materials.sub(' ', ', ')
  = render('layouts/partials/reviews')

