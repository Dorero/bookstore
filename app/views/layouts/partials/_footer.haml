%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to(I18n.t(:home), root_path, class: 'nav-link')
          %li
            = link_to(I18n.t(:shop), '/shop', class: 'nav-link')
          %li
            = link_to(I18n.t(:orders), '/orders', class: 'nav-link')
          %li
            = link_to(I18n.t(:settings), '/settings', class: 'nav-link')
      .col-sm-3
        %p.general-nav-mail= I18n.t(:email_support)
        %p.general-nav-number= I18n.t(:phone)
        %ul.list-inline.general-align
          %li
            = link_to('/facebook', class: 'nav-link') do
              %i.fab.fa-facebook-f{'aria-hidden': "true"}
          %li
            = link_to('/twitter', class: 'nav-link') do
              %i.fab.fa-twitter{'aria-hidden': "true"}
          %li
            = link_to('/google-plus', class: 'nav-link') do
              %i.fab.fa-google-plus{'aria-hidden': "true"}
          %li
            = link_to('/instagram', class: 'nav-link') do
              %i.fab.fa-instagram{'aria-hidden': "true"}
