- books.each_with_index do |book, index|
  .item{ class: "#{'active' if index.zero?}" }
    .row
      .col-sm-5
        .general-img-wrap
          %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      .col-sm-7
        .mb-60
          %h1= book.name
          %p.lead= book.description
          %p.lead.small
            - book.authors.each_with_index do |author, index|
              = "#{index != book.authors.length - 1 ? author.first_name + ',' : author.first_name}"
          .general-align
            %button.btn-primary= I18n.t(:buy_now)
