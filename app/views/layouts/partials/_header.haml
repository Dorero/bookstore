%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to(I18n.t(:title), root_path, class: 'navbar-brand')
    = link_to('/shop', class: 'shop-link pull-right visible-xs') do
      %span.shop-icon
        %span.shop-quantity 3
    = link_to('/shop', class: 'shop-link pull-right hidden-xs') do
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to(I18n.t(:home), root_path)
          %li
            = link_to(I18n.t(:shop), '/menu', data_toggle: "collapse", class: "article", type: 'button', aria_expanded: 'false', aria_controls: 'menu')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                = link_to(I18n.t(:mobile_development), '/mobile_develop', class: 'collapse-link')
              %li
                = link_to(I18n.t(:photo), '/photo', class: 'collapse-link')
              %li
                = link_to(I18n.t(:web_design), '/web_design', class: 'collapse-link')
          %li
            = link_to(I18n.t(:my_account), '/account')
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to('Home', root_path)
          %li.dropdown
            = link_to(I18n.t(:shop), '/menu', data_toggle: "collapse", class: "article", type: 'button', aria_expanded: 'false', aria_controls: 'menu')
            %ul.dropdown-menu
              %li
                = link_to(I18n.t(:mobile_development), '/mobile_develop', class: 'collapse-link')
              %li
                = link_to(I18n.t(:photo), '/photo', class: 'collapse-link')
              %li
                = link_to(I18n.t(:web_design), '/web_design', class: 'collapse-link')
              %li.divider{role: "separator"}
              %li
                = link_to(I18n.t(:log_out), '/log_out')
          %li
            = link_to(I18n.t(:my_account), '/account')
