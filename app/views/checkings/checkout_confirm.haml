%main.container.general-main-wrap
  = render('layouts/partials/checkout_steps', active: I18n.t(:confirm))
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle= I18n.t(:shipping_address)
      %p.general-address
        = @shipping_address.decorate.name
        %span.general-edit= I18n.t(:edit)
        %br
        = @shipping_address.address
        %br
        = @shipping_address.decorate.city_zip
        %br
        = @shipping_address.country
        %br
        = "Phone #{@shipping_address.phone}"
    .col-sm-3
      %h3.general-subtitle= I18n.t(:billing_address)
      %p.general-address
        = @billing_address.decorate.name
        %span.general-edit= I18n.t(:edit)
        %br
        = @billing_address.address
        %br
        = @billing_address.decorate.city_zip
        %br
        = @billing_address.country
        %br
        = "Phone #{@billing_address.phone}"
    .col-sm-3
      %h3.general-subtitle= I18n.t(:shipmets)
      %p.general-address
        = @delivery.method
        %span.general-edit= I18n.t(:edit)
        %br
        By train
    .col-sm-3
      %h3.general-subtitle Payment Information
      %p.general-address
        ** ** ** 8756
        %span.general-edit= I18n.t(:edit)
        %br
        12/2018
