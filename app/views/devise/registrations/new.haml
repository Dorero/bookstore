%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= I18n.t(:sign_up)
    = link_to(user_facebook_omniauth_authorize_path, class: 'general-login-icon', method: :post) do
      %i.fab.fa-facebook-square{style: "font-size: 45px"}
    %p.general-login-text= I18n.t(:or)
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'general-form'}) do |form|
    = render "devise/shared/error_messages", resource: resource
    .form-group.mb-30
      = form.label :email, I18n.t(:enter_email), class: 'control-label input-label'
      %br/
      = form.email_field :email, autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: I18n.t(:enter_email)
    .form-group.mb-30
      = form.label :password, I18n.t(:password), class: 'control-label input-label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = form.password_field :password, autocomplete: "new-password", id: 'password', class: 'form-control', placeholder: I18n.t(:password)
    .form-group.mb-30
      = form.label :password_confirmation, I18n.t(:confirm_password), class: 'control-label input-label'
      %br/
      = form.password_field :password_confirmation, autocomplete: "new-password", id: 'confirm', class: 'form-control', placeholder: I18n.t(:confirm_password)
    .text-center
      %button.btn.btn-default.mb-20= I18n.t(:back_to_store)
  %p.general-sign-text.text-center
    = I18n.t(:have_account)
    = link_to(I18n.t(:log_in), new_session_path(resource), class: 'in-gold-500')
