%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      - books.length.times do |index|
        %li{ class: "#{'active' if index.zero?}"  ,'data-target': "#slider", 'data-slide-to': "#{index}"}
    .carousel-inner{role: "listbox"}
      - books.each_with_index do |book, index|
        .item{ class: "#{'active' if index.zero?}" }
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .col-sm-7
              .mb-60
                %h1= book.name
                %p.lead= book.description
                %p.lead.small
                  - book.authors.each_with_index do |author, index|
                    = "#{index != book.authors.length - 1 ? author.name + ',' : author.name}"
                .general-align
                  %button.btn-primary= I18n.t(:buy_now)

    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only= I18n.t(:previous_button)
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only= I18n.t(:next_button)
  .container
    .jumbotron.text-center.mb-0
      %h2.h1= I18n.t(:welcome)
      .mb-res-50
        %p= I18n.t(:we_pore)
      %button.btn.btn-default= I18n.t(:get_started)
    .mb-35
      %h3= I18n.t(:best_sellers)
      .row
        - 4.times do |index|
          .col-sm-6.col-md-3
            .general-thumb-wrap
              .thumbnail.general-thumbnail
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
                .thumb-hover
                  .general-thumb-link-wrap
                    = link_to("", '/show', id: '1', class: "thumb-hover-link")
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                    = link_to("", '/buy', id: '1', class: "thumb-hover-link")
                    %i.fa.fa-shopping-cart.thumb-icon
            .mb-35
              .clearfix
                %p.pull-right.font-16.in-gold-500 â‚¬28.50
                %p.title.mr-55 Android Programming for Beginners
              %span.divider-sm
              %p.lead.small John Horton
