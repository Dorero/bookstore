%main.container
  %h1.general-title-margin= I18n.t(:settings)
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= I18n.t(:address)
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= I18n.t(:privacy)
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= I18n.t(:billing_address)
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= I18n.t(:shipping_address)
        .row
          .col-md-5.mb-40
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0= I18n.t(:billing_address)
            = simple_form_for @billing, as: :billing, url: billing_path, method: :patch, validate: true do |form|
              = render('layouts/partials/inputs_address', form: form)
          .col-md-5.col-md-offset-1.mb-25
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0= I18n.t(:shipping_address)
            = simple_form_for @shipping, as: :shipping, url: shipping_path, method: :patch, validate: true do |form|
              = render('layouts/partials/inputs_address', form: form)
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25= I18n.t(:email)
          = simple_form_for current_user, as: :edit_email, url: user_path(current_user.id), html: { class: 'general-form-md'} , validate: true do |form|
            = form.input :email, label: I18n.t(:enter_email), name: 'email', placeholder: I18n.t(:enter_email), id: 'email', wrapper_html: { class: 'form-group mb-35'}
            .text-center.general-text-align
              = form.button :submit, I18n.t(:save)
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25= I18n.t(:password)
          = simple_form_for current_user, as: :edit_password, url: user_path(current_user.id), html: { class: 'general-form-md divider-lg-bottom pb-25'}, validate: true do |form|
            = form.input :password, label: I18n.t(:old_password), name: 'password', placeholder: I18n.t(:old_password), input_html: {id: 'oldPassword'}, wrapper_html: { class: 'form-group mb-30'}
            = form.input :password, label: I18n.t(:new_password), name: 'password', placeholder: I18n.t(:new_password), input_html: {id: 'password'}, wrapper_html: { class: 'form-group mb-30'}
            = form.input :password, label: I18n.t(:confirm_password), name: 'password', placeholder: I18n.t(:confirm_password), input_html: {id: 'confirmPassword'}, wrapper_html: { class: 'form-group mb-40'}
            .text-center.general-text-align
              = form.button :submit, I18n.t(:save)
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= I18n.t(:remove_account)
          = simple_form_for current_user, as: :remove, url: user_path(current_user.id),  method: :patch, validate: true do |form|
            .general-settings-btn
              = form.button :submit, I18n.t(:please_remove_account)
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fas.fa-check
                %span.checkbox-text= I18n.t(:i_understand)
